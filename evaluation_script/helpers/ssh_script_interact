#!/usr/bin/expect

#Usage ssh_script <host> <ssh user> <ssh password> "<script to run>"

set timeout -1

spawn ssh [lindex $argv 1]@[lindex $argv 0]

expect "yes/no" { 
	send "yes\r"
	expect "*?assword" { send "[lindex $argv 2]\r" }
	} "*?assword" { send "[lindex $argv 2]\r" }

expect "# " { send "[lindex $argv 3]\r" }
expect "~# " { send "exit" }
